<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
    <div class="card" id="form-question">
        <div class="card-header">
            <h3>Fazer uma pergunta</h3>
        </div>
        <div class="card-body">
            <form method="post" action="/save-question">
                <br>
                <label>Título</label>
                <input type="text" placeholder="Título" class="form-control" name="title">
                <br>
                <label>Pergunta</label>
                <textarea placeholder="Escreva sua pergunta aqui" class="form-control" name="question"></textarea>
                <br>
                <button class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
</div>

